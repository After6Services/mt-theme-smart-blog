<!DOCTYPE html>
<html>
    <head>

<mtml tag="mt:IfUserAgent" params='wants="SmartPhone"'>
    <mt:DynamicMTML>

        <mt:Ignore><!-- for Smart Phone --></mt:Ignore>
        <$mt:Include module="<__trans phrase="HTML Head - Mobile">"$>

    </mt:DynamicMTML>
<mtml tag="mt:else">

    <mt:Ignore><!-- for Other --></mt:Ignore>
    <$mt:Include module="<__trans phrase="HTML Head">"$>

<mtml tag="/mt:IfUserAgent">

<mt:EntryPrevious><link rel="prev" href="<$mt:EntryPermalink$>" title="<$mt:EntryTitle encode_html="1"$>" /></mt:EntryPrevious>
<mt:EntryNext><link rel="next" href="<$mt:EntryPermalink$>" title="<$mt:EntryTitle encode_html="1"$>" /></mt:EntryNext>

        <title><mt:if tag="EntryTitle"><$mt:EntryTitle encode_html="1"$><mt:Else><__trans phrase="Untitled"></mt:If> - <$mt:BlogName encode_html="1"$></title>
    </head>
    <body class="individual">

        <div class="container" data-role="page" data-theme="a">

            <header class="page-header">

               <div class="header-inner inner" data-role="header" data-theme="a">

<$mt:Include module="<__trans phrase="Banner Header">"$>

               </div>

               <div class="header-menu menu">
                   <div class="header-menu-inner inner">

<mtml tag="mt:IfUserAgent" params='wants="SmartPhone"'>
    <mt:DynamicMTML>

        <mt:Ignore><!-- for Smart Phone --></mt:Ignore>
        <$mt:Include module="<__trans phrase="Menu - Mobile">"$>

    </mt:DynamicMTML>
<mtml tag="mt:else">

    <mt:Ignore><!-- for Other --></mt:Ignore>
    <$mt:Include module="<__trans phrase="Menu">"$>

<mtml tag="/mt:IfUserAgent">

                   </div>
               </div>

            </header>

            <div class="content">
                <div class="content-inner inner" data-role="content" data-theme="a">

                    <div class="main-content">

<mt:Ignore><!-- Main Content --></mt:Ignore>
                        <article id="entry-<$mt:EntryID$>" class="entry">

                            <header class="entry-header">
                                <abbr class="data datetime pubdate" title="<$mt:EntryDate format_name="iso8601"$>"><$mt:EntryDate format="%x %X"$></abbr>
                                <h1 class="title entry-title">
    <mt:if tag="EntryTitle">
        <$mt:EntryTitle$>
    <mt:Else>
        <__trans phrase="Untitled">
    </mt:If>
                                </h1>
                            </header>

                            <div class="entry-content">                        
<$mt:EntryBody$>
<$mt:EntryMore$>
                            </div>

                            <footer class="entry-footer">
                                <ul class="entry-meta">
<mt:If tag="EntryAuthorDisplayName">
                                    <li class="author"><__trans phrase="Author">: <address class="entry-author vcard author"><$mt:EntryAuthorLink show_hcard="1"$></address></li>
</mt:If>
<mt:IfArchiveTypeEnabled archive_type="Category">
    <mt:If tag="EntryCategories">
                                    <li class="entry-categories"><__trans phrase="Category">: <mt:EntryCategories glue=", "><a href="<$mt:CategoryArchiveLink$>" rel="tag"><$mt:CategoryLabel$></a></mt:EntryCategories></li>
    </mt:If>
</mt:IfArchiveTypeEnabled>
<mt:EntryIfTagged>
                                    <li class="entry-tags"><__trans phrase="Tags">: <mt:EntryTags glue=", "><a rel="tag" href="javascript:void(0)" onclick="location.href='<$mt:TagSearchLink encode_js="1"$>';return false;" class="tag"><$mt:TagName$></a></mt:EntryTags></li>
</mt:EntryIfTagged>
                                </ul>
                            </footer>

                            <nav class="content-nav entry-nav" data-role="controlgroup" data-type="horizontal">
<mt:EntryPrevious>
                                <a rel="prev" href="<$mt:EntryPermalink$>" class="prev-link button" data-role="button"><__trans phrase="Previous"></a>
</mt:EntryPrevious>
<mt:EntryNext>
                                <a rel="next" href="<$mt:EntryPermalink$>" class="next-link button" data-role="button"><__trans phrase="Next"></a>
</mt:EntryNext>
                            </nav>

<mt:Include module="<__trans phrase="Comments">">

                        </article>

                    </div>

<mtml tag="mt:IfUserAgent" params='wants="SmartPhone"'>
<mtml tag="mt:else">
                    <div class="related-content">

    <mt:Ignore><!-- Related Content --></mt:Ignore>
    <$mt:WidgetSet name="<__trans phrase="Related Content">"$>

                    </div>
<mtml tag="/mt:IfUserAgent">

                </div>
            </div>

            <footer class="page-footer">
                <div class="footer-inner inner" data-role="footer" data-theme="a">

<$mt:Include module="<__trans phrase="Banner Footer">"$>

                </div>
            </footer>

        </div>
        <script>

<mt:IfUserAgent wants="SmartPhone">

    <mt:Ignore><!-- for Smart Phone --></mt:Ignore>
    <$mt:Include module="<__trans phrase="JavaScript Footer - Mobile">"$>

<mt:Else>

    <mt:Ignore><!-- for Other --></mt:Ignore>
    <$mt:Include module="<__trans phrase="JavaScript Footer">"$>

</mt:IfUserAgent>

        </script>
    </body>
</html>

